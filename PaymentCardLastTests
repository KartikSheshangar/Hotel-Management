package J_Unit;
 
 
import static org.junit.Assert.*; 

import java.io.*;

import org.junit.Test;
 
import HOTEL.HotelApp;
 
 
public class PaymentCardLastTests {
 
    private String run(String input) {

        InputStream in = new ByteArrayInputStream(input.getBytes());

        ByteArrayOutputStream out = new ByteArrayOutputStream();

        System.setIn(in);

        System.setOut(new PrintStream(out));
 
        try { HotelApp.main(null); } catch (Exception ignored) {}
 
        return out.toString();

    }
 
    @Test

    public void testTC33_CorrectLast4() {

        String output = run(

                "2\nR1\n101\n1\n0\n5\n2\n1234\n1234\n7\n"

        );

        assertTrue(output.contains("verified"));

    }
 
    @Test

    public void testTC34_LessThan4Digits() {

        String output = run(

                "2\nR1\n101\n1\n0\n5\n2\n12\n7\n"

        );

        assertTrue(output.contains("Not Accepted"));

    }

}
 
