package J_Unit;
 
 
import static org.junit.Assert.*; 

import java.io.*;
 
import org.junit.Test;
 
import HOTEL.HotelApp;
 
public class HotelAppInputTests {
 
    private String run(String input) {

        InputStream in = new ByteArrayInputStream(input.getBytes());

        ByteArrayOutputStream out = new ByteArrayOutputStream();

        System.setIn(in);

        System.setOut(new PrintStream(out));
 
        try {

            HotelApp.main(null);

        } catch (Exception ignored) {}
 
        return out.toString();

    }
 
    @Test

    public void testTC01_CorrectMenuOption() {

        String output = run("1\n7\n");

        assertTrue(output.contains("MENU"));

    }
 
    @Test

    public void testTC05_AlphabetInvalid() {

        String output = run("ab\n7\n");

        assertTrue(output.contains("Invalid"));

    }
 
    @Test

    public void testTC51_OrderIdAlphabet() {

        String output = run("5\na\n7\n");

        assertTrue(output.contains("Invalid Number"));

    }
 
    @Test

    public void testTC56_OrderIdNull() {

        String output = run("5\n\n7\n");

        assertTrue(output.contains("Invalid Number"));

    }
 
    @Test

    public void testTC57_OrderIdCorrect() {

        // Must create order first.

        String output = run("2\nRoom101\n101\n1\n0\n5\n1\n1\n0\n7\n");

        assertTrue(output.contains("Accepted"));

    }

}
 
